<% include ../partials/header.ejs %>


<% console.log(typeof campgrounds); %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp</h1>
            <p>View our hand picked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-large btn-primary"> To Add new campgrounds </a>
            </p>
        </div>
    </header>

    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){%>
            <div class='col-md-3 col-sm-6'>
                <div class="thumbnail">
                    <img src="<%= campground.image%>" class="img-rounded img-responsive">
                    <div class="caption">
                       <h4 class="text-center"><%= campground.name %></h4>
                    </div>
                    <p style="text-align:center;">
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary" >More Info</a>
                    </p>
                </div>
            </div>
        <%});%>
    </div>
</div>

<% include ../partials/footer.ejs %>
